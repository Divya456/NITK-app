<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.divi.nitk_app.Pool">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swimming Pool"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:id="@+id/textView2"
        android:textColor="#ff7b21ff" />




    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/swimming_pool"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NITK supports an olympic size swimming pool.\n\nFEATURES:\n\nInternational Standard, 50 Mts. x 25 Mts. Size, with 90 Cm. depth at shallow end and 5 Mts. depth at deeper end. 3 Platforms of 1 Mt., 3 Mts. and 5 Mts height for Diving, and One Spring Board fitted at 1 Mt. height for Diving. Anti wave Lane markers to conduct competitions is also provided. Take off Boards are portable. Fiber of Olympic type is fitted. It has the capability to accommodate 150 to 200 people at a time.
        "
        android:textSize="20dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/black"
        />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
