<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.divi.nitk_app.Sports">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:id="@+id/textView"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center" />





            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:text="A fully-fledged Physical Education and Sports Department provides and manages games and sports,and physical fitness facilities.Infrastructure facilities are available in the sports complex.\n\nThe college supports swimming pool, three tennis courts, two basketball courts, two volleyball courts, full size football and cricket grounds, one hockey field, one handball court, three badminton courts, five T.T tables etc. Other games like Chess and Carrom are also encouraged.
"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                />


        </LinearLayout>
    </ScrollView>



    </RelativeLayout>
